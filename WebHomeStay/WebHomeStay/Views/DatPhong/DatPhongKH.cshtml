@using WebHomeStay.Models;
@model WebHomeStay.Models.HOADON

@{
    ViewBag.Title = "DatPhongKH";
    Layout = "~/Views/Shared/_Layout.cshtml";
    KHACHHANG kh = Session["KH"] as KHACHHANG;
    PHONG phong = ViewBag.phong;
    DVu dv = ViewBag.MaDichVu;
}



@if (kh == null)
{
    <p class="text-danger">Bạn chưa đăng nhập, vui lòng đăng nhập để đặt phòng</p>
}
else
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="well well-sm">
                        <form class="form-horizontal" role="form">
                            <fieldset>
                                <legend class="text-center">Thông Tin Đặt Phòng</legend>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="makh">Mã Khách Hàng</label>
                                    <div class="col-md-8">
                                        @Html.TextBox("makh", kh.MAKH, new { id = "makh", @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="tenkh">Tên Khách Hàng</label>
                                    <div class="col-md-8">
                                        @Html.TextBox("tenkh", kh.HOTEN, new { id = "tenkh", @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="maph">Mã Phòng</label>
                                    <div class="col-md-8">
                                        @Html.TextBox("maph", phong.MAPHONG, new { id = "maph", @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="tenphong">Tên Phòng</label>
                                    <div class="col-md-8">
                                        @Html.TextBox("tenphong", phong.TENPHONG, new { id = "tenphong", @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="giatien">Giá tiền</label>
                                    <div class="col-md-8">
                                        @Html.TextBox("giatien", String.Format("{0:0,0 VNĐ}", phong.LOAIPHONG.GIAPH), new { id = "giatien", @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>


                                <!-- Đẩy ảnh phòng về bên phải -->
                                <div class="form-group">
                                    <div class="col-md-8 col-md-offset-4">
                                        <img src="~/img/img/@(phong.MAPHONG).jpg" alt="Ảnh Phòng" class="img-responsive" style="margin-top: 20px; margin-bottom: 20px;" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8">
                                        <input type="submit" value="Đặt Phòng" class="btn btn-primary" />
                                    </div>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

