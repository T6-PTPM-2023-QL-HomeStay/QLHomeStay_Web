    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".datepicker").datepicker({ dateFormat: "dd-mm-yy" }).val()
        });
    </script>
    <script>
        function toggleUserDetails() {
            var userDetails = document.querySelector('.user-dropdown .user-details');
            userDetails.classList.toggle('show-details');
        }

        // Đóng user-details nếu click bên ngoài
        document.addEventListener('click', function (event) {
            var userDetails = document.querySelector('.user-dropdown .user-details');
            var userIcon = document.querySelector('.user-dropdown .user-profile img');

            if (event.target !== userIcon && !userDetails.contains(event.target)) {
                userDetails.classList.remove('show-details');
            }
        });

    </script>

</body>
